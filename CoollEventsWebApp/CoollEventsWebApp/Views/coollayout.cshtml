<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="icon" href="/Resources/ico.ico">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <script src="//code.jquery.com/jquery.min.js" type="text/javascript"></script>
    <link href="Resources/css/bootstrap-responsive.css" rel="stylesheet">
    <link href="Resources/css/style.css" rel="stylesheet">
    <link href="Resources/color/default.css" rel="stylesheet">
    <link href="Resources/css/@ViewBag.Style" rel="stylesheet">
    <link rel="shortcut icon" href="img/favicon.ico">
    <style>
        html, body {
            overflow-x: hidden;
        }
    </style>
</head>
<body>
    <div class="navbar-wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <!-- Responsive navbar -->
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                    </a>
                    <h1 class="brand"><a href="/index">CoolEvents</a></h1>
                    <!-- navigation -->
                    <nav class="pull-right nav-collapse collapse">
                        <ul id="menu-main" class="nav">
                            <li><a title="team" href="/Index">Home</a></li>
                            <li><a title="services" href="/Sobre">Sobre</a></li>
                            <li><a title="works" href="/eventos">Eventos</a></li>
                            <li><a title="contato" href="/contato">Contato</a></li>
                            @{
                                if (Session["idUsuario"] == null)
                                {
                                    <li><a title="blog" href="/Entrar">Entrar</a></li>
                                }
                            }


                            @{
                                if (Session["nomeUsuario"] != null)
                                {
                                    <li><a title="Perfil" href="/perfil">@Session["nomeUsuario"].ToString()</a></li>
                                    <li>@Html.ActionLink("Sair", "Index", "Logout", null, new { title = "logout", style = "color: ##ff9b8a" })</li>
                                }
                            }


                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="span6 offset3">
                    <ul class="social-networks">
                        <li><a href="#"><i class="icon-circled icon-bgdark icon-instagram icon-2x"></i></a></li>
                        <li><a href="#"><i class="icon-circled icon-bgdark icon-twitter icon-2x"></i></a></li>
                        <li><a href="#"><i class="icon-circled icon-bgdark icon-dribbble icon-2x"></i></a></li>
                        <li><a href="#"><i class="icon-circled icon-bgdark icon-pinterest icon-2x"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- ./container -->
    </footer>
    <script src="Resources/js/jquery.js"></script>
    <script src="Resources/js/jquery.scrollTo.js"></script>
    <script src="Resources/js/jquery.nav.js"></script>
    <script src="Resources/js/jquery.localScroll.js"></script>
    <script src="Resources/js/bootstrap.js"></script>
    <script src="Resources/js/jquery.prettyPhoto.js"></script>
    <script src="Resources/js/isotope.js"></script>
    <script src="Resources/js/jquery.flexslider.js"></script>
    <script src="Resources/js/inview.js"></script>
    <script src="Resources/js/animate.js"></script>
    <script src="Resources/js/custom.js"></script>
    <script src="Resources/contactform/contactform.js"></script>
</body>
</html>
