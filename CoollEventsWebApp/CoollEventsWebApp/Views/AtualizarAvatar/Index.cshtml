
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/coollayout.cshtml";
    ViewBag.Style = "_trocarsenha.css";
}

<style>
    #imagem {
        display: none;
    }

    #imagemUploader { 
        text-align: center;
        margin-top: 5vh;
        font-size: 1.2rem;
        text-decoration: underline;
    }

    #submit { 
        bottom: 0;
    }

    img { 
        width: 50%;
        margin: auto;
    }

</style>

<div id="bg">
    <div id="boxlogin">
        <div id="content">
            @using (Html.BeginForm(FormMethod.Post))
            {
                <img src="~/Resources/img/usericon.png"/>
                <label for="imagem" id="imagemUploader"> Carregar imagem </label>
                <input type="file" name="imagem" id="imagem" accept=".png, .jpg, .jpeg" />
                <input type="submit" id="submit" value="Confirmar"/>
            }
        </div>
    </div>
</div>