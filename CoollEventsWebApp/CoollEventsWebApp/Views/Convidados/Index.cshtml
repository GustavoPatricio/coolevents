
@{
    ViewBag.Title = "Coolevents: Convidados";
    Layout = "~/Views/coollayout.cshtml";
    ViewBag.Style = "_trocarsenha.css";
}

<style>
    #bg {
        width: 100vw;
        min-height: 100vh;
        background: url("/Resources/img/eventobg.jpg") center center no-repeat fixed;
        padding-top: 8vh;
        padding-bottom: 8vh;
    }

    #formContainer {
        margin: auto;
        width: 50%;
        min-height: 80vh;
        background-color: white;
        box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
        border-radius: 2px;
    }

    form {
        margin: auto;
        width: 80%;
        padding-top: 5vh;
        padding-bottom: 5vh;
    }

    #convidado {
        margin-top: 10vh;
        width: 100%;
        border: none;
        border-bottom: 1px solid rgba(48, 48, 48, 0.27);
        box-shadow: none;
        border-radius: 0;
        color: #121212;
        font-size: 1.3rem;
    }

    input[type=submit] {
        color: white;
        text-decoration: none;
        font-size: 1.4rem;
        border: none;
        font-family: sans-serif;
        background-color: #0094ff;
        padding: 1.2vh 5vw;
        border-radius: 5px;
        transition: all .4s ease-in-out;
    }

        input[type=submit]:active {
            outline: none;
        }

        input[type=submit]:hover {
            background-color: #0067ca;
        }

    #proxima {
        font-size: 1.1rem;
        color: #0067ca;
    }

</style>

<div id="bg">
    <div id="formContainer">
        @using (Html.BeginForm(FormMethod.Post))
        {
            <input type="email" name="convidado" id="convidado" placeholder="email do convidado"/>
            <input type="submit" name="submit" value="Convidar" />

            @Html.ActionLink("Proxima etapa", "Index", "Tarefas", null , new { @id = "proxima" , style="margin: auto"});
        }
    </div>
</div>