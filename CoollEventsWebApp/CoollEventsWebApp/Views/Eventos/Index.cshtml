@model List<CoollEventsWebApp.Models.EventoTemplate>

@{
    ViewBag.Title = "CoolEvents: Eventos";
    Layout = "~/Views/coollayout.cshtml";
}

<style>
    #bg {
        width: 100vw;
        min-height: 100vh;
        background-color: #dd70c3;
        position: relative;
        padding-top: 5vh;
    }

    #SearchWrapper {
        margin: auto;
        box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
        border-radius: 2px;
        width: 80%;
        height: 7vh;
        background-color: white;
        display: flex;
    }

    #SearchWrapper img {
        float: left;
        height: 4vh;
        align-self: center;
        margin-left: 2vw;
        cursor: pointer;
        transition: all .1s ease-in-out;
    }

    #SearchWrapper img:hover {
        transform: rotate(20deg);
    }

        #SearchWrapper input {
            display: flex;
            border: none;
            border-radius: 0;
            margin: 0;
            box-shadow: none;
            border-bottom: 1px solid #808080;
            font-size: 1.2rem;
            padding: 0;
            padding-bottom: 5px;
            padding-left: 5px;
            margin-top: auto;
            margin-bottom: 2vh;
            margin-left: 2vw;
            width: 70%;
        }

    #EventosWrapper {
        margin: auto;
        margin-top: 5vh;
        width: 80%;
        min-height: 40vh;
        background-color: transparent;
        display: flex;
        flex-direction: column;
    }

    .eventoClick {
        text-decoration: none;
        width: 70%;
        height: 14vh;
        color: #171717;
        transition: all .4s ease-in-out;
        margin-bottom: 3vh;
    }

        .eventoClick:hover {
            color: #171717;
            text-decoration: none;
            transform: translateX(2%);
        }

    .evento {
        border-radius: 2px;
        width: 100%;
        height: 100%;
        background-color: white;
        box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
        display: flex;
        align-content: center;
    }
    
    .evento img {
        margin-left: 1vw;
        height: 80%;
        align-self: center;
    }

        .evento .eventoContentWrapper {
            width: 100%;
            height: 100%;
        }

        .evento .eventoContent {
            padding: 1.5vh 2vw;
        }

        .evento .eventoNome { 
        
        }

        .evento .eventoData { 
            margin-top: .5vh;
        }

        .evento .eventoDescricao {
            margin-top: .5vh;
        }

        .evento .eventoCidadeUF {
            margin-top: .5vh;
        }

    #Funcoes {
        width: 80%;
        height: 8vh;
        margin: auto;
        margin-top: 4vh;
        background-color: white;
        margin-bottom: 5vh;
        box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
        border-radius: 2px;
        display: flex;
        padding-left: 2vw;
    }

    #Funcoes a { 
        font-family: sans-serif;
        align-self: center;
        color: #171717;
        margin-right: 3vw;
        border: 1px solid #171717;
        padding: 1vh 1vw;
        transition: all .2s ease-in-out;
        border-radius: 3px;
    }

    #Funcoes a:hover { 
        text-decoration: none;
        background-color: #1d1d1d;
        color: white;
    }

</style>

<div id="bg">
    <div id="Funcoes">
        <a href="/criarEventos">
            Criar evento    
        </a>
        <a href="/criarEventos">
            Meus convites
        </a>
        <a href="/criarEventos">
            Enquetes
        </a>
    </div>

    <div id="SearchWrapper">
        <img src="/Resources/img/lupa.png" id="lupa"/>
        @{
            if (string.IsNullOrWhiteSpace(Request.QueryString["q"]))
            {
                <input type="text" name="q" id="q" placeholder="Procurar" />
            }
            else
            {
                <input type="text" name="q" id="q" value="@Request.QueryString["q"].ToString()" placeholder="Procurar" />
            }
        }

    </div>
    <div id="EventosWrapper">
   @foreach(CoollEventsWebApp.Models.EventoTemplate evento in Model) { 
        <a href="/evento?e=@evento.idEvento" class="eventoClick">
            <div class="evento">
                <img src="http://localhost:3000/eventoLogo/@evento.Logo" class="eventoFoto" />
                <div class="eventoContentWrapper" style="width: 100%;">
                    <div class="eventoContent">
                        <div class="eventoNome"> <b> @evento.Nome </b> </div>
                        <div class="eventoData">  <i> @evento.Data_evento </i> </div>
                        <div class="eventoDescricao">  @evento.Descricao  </div>
                        <div class="eventoCidadeUF"> @evento.Cidade - @evento.UF </div>
                    </div>
                </div>
            </div>
        </a>
     }
    </div>
</div>

<script>
    function Search() {
        window.location.href = "/Eventos?q=" + $("#q").val();
    }

    $("#lupa").click(() => {
        Search();
    });

    $("#q").keyup((event) => {
        if (event.keyCode == 13) {
            Search();
        }
    });

</script>